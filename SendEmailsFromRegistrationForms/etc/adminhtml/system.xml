<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="orienteed_emails" translate="label" type="text" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Email Templates</label>
            <tab>orienteed</tab>
            <resource>Orienteed_SendEmailsFromRegistrationForms::config_sendemailsfromregistrationforms</resource>
            <group id="general" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="noncustomer" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Non customer Email Template</label>
                    <comment>Select an email template.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="becustomer" translate="label comment" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Be customer Email Template</label>
                    <comment>Select an email template.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="redirecturl" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enter Redirect Url</label>
                    <comment>Enter Redirect Url with trailing slash. Example : (http://10.0.8.134:10000/).</comment>
                </field>
            </group>
        </section>
    </system>
</config>